{
  "buildCommand": "cd frontend && npm install --silent && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm --version",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD .",
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@3.1.1"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 